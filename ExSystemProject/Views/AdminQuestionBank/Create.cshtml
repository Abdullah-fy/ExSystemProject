@model ExSystemProject.DTOS.QuestionBankDTO
@{
    ViewData["Title"] = "Create True/False Question";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h5>Create True/False Question</h5>
    </div>
    <div class="card-body">
        <form method="post" action="@Url.Action("Create", "AdminQuestionBank")">
            @Html.AntiForgeryToken()

            <!-- Hidden field to set question type -->
            <input type="hidden" name="QuesType" value="TF" />

            <div class="mb-3">
                <label for="QuesText">Question Text</label>
                <textarea name="QuesText" class="form-control" required>@(ViewBag.SubmittedQuesText ?? "")</textarea>
            </div>

            <div class="mb-3">
                <label>Correct Answer</label>
                <div class="form-check">
                    <input type="radio" id="tfTrue" name="tfCorrectAnswer" value="true"
                    @(ViewBag.SubmittedTfCorrectAnswer == "false" ? "" : "checked") class="form-check-input">
                    <label for="tfTrue" class="form-check-label">True</label>
                </div>
                <div class="form-check">
                    <input type="radio" id="tfFalse" name="tfCorrectAnswer" value="false"
                    @(ViewBag.SubmittedTfCorrectAnswer == "false" ? "checked" : "") class="form-check-input">
                    <label for="tfFalse" class="form-check-label">False</label>
                </div>
            </div>

            <div class="mb-3">
                <label for="QuesScore">Question Score</label>
                <input type="number" name="QuesScore" value="@(ViewBag.SubmittedQuesScore ?? 5)" min="1" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="ExamId">Exam</label>
                <select name="ExamId" class="form-select">
                    <option value="">-- None (Question Bank Only) --</option>
                    @foreach (var item in ViewBag.Exams)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <!-- Display errors if any -->
                <div class="text-danger">
                    @Html.ValidationSummary()
                </div>

                <!-- Debug info -->
                <div style="display:none;" id="debugInfo">
                    <pre>@Json.Serialize(ViewBag)</pre>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Create Question</button>
        </form>
    </div>
</div>

<script>
    // Show debug info in console
    document.addEventListener('DOMContentLoaded', function() {
        if (document.getElementById('debugInfo')) {
            console.log('ViewBag data:', document.getElementById('debugInfo').textContent);
        }
    });
</script>