@{
    ViewData["Title"] = "Create True/False Question";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h5>Create True/False Question</h5>
    </div>
    <div class="card-body">
        <form asp-action="CreateTrueFalse" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label for="quesText" class="form-label">Question Text</label>
                <textarea id="quesText" name="quesText" class="form-control" rows="3" required>@ViewBag.QuesText</textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Correct Answer</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="tfCorrectAnswer" id="tfTrue" value="true"
                    @(ViewBag.TFCorrectAnswer == "false" ? "" : "checked")>
                    <label class="form-check-label" for="tfTrue">True</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="tfCorrectAnswer" id="tfFalse" value="false"
                    @(ViewBag.TFCorrectAnswer == "false" ? "checked" : "")>
                    <label class="form-check-label" for="tfFalse">False</label>
                </div>
            </div>

            <div class="mb-3">
                <label for="quesScore" class="form-label">Question Score</label>
                <input type="number" id="quesScore" name="quesScore" value="@(ViewBag.QuesScore ?? 5)" min="1" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="examId" class="form-label">Exam</label>
                <select id="examId" name="examId" class="form-select" asp-items="ViewBag.Exams">
                    <option value="">-- None (Question Bank Only) --</option>
                </select>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                <button type="submit" class="btn btn-primary">Create True/False Question</button>
            </div>
        </form>

        <!-- Link to MCQ question creation -->
        <div class="mt-3 text-center">
            <a asp-action="Create" class="btn btn-outline-primary">Switch to Multiple Choice Question</a>
        </div>
    </div>
</div>