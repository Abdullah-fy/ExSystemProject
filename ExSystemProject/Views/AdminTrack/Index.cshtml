@using ExSystemProject.DTOS
@model List<TrackDTO>
@{
    ViewData["Title"] = "Track Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3>
                Track Management
                <small class="text-muted">System Setup</small>
            </h3>
        </div>
        <div>
            <a class="btn btn-primary" asp-action="Create" asp-controller="AdminTrack">
                <i class="bi bi-plus-lg"></i> Add New Track
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">All Tracks</h5>
                <span class="badge bg-primary">Total: @Model.Count</span>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" style="width: 5%">#</th>
                            <th scope="col" style="width: 20%">Track Name</th>
                            <th scope="col" style="width: 10%">Duration</th>
                            <th scope="col" style="width: 10%">Intake</th>
                            <th scope="col" style="width: 10%">Status</th>
                            <th scope="col" style="width: 20%">Branch</th>
                            <th scope="col" style="width: 25%">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TrackId</td>
                                    <td>
                                        <span class="fw-medium">@item.TrackName</span>
                                    </td>
                                    <td>@item.TrackDuration M</td>
                                    <td>@item.TrackIntake</td>
                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i> Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle me-1"></i> Inactive
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge rounded-pill" style="background-color: var(--iti-blue);">
                                            <i class="bi bi-building me-1"></i> @item.BranchName
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-sm btn-info" asp-action="Edit" asp-controller="AdminTrack" asp-route-id="@item.TrackId">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-controller="AdminTrack" asp-route-id="@item.TrackId">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <div class="d-flex flex-column align-items-center">
                                        <i class="bi bi-diagram-3 text-muted" style="font-size: 3rem;"></i>
                                        <p class="mt-2 mb-0">No tracks found.</p>
                                        <a asp-action="Create" asp-controller="AdminTrack" class="btn btn-sm btn-primary mt-2">Add your first track</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    @if (ViewBag.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", "AdminTrack", new { page = ViewBag.CurrentPage - 1 })" tabindex="-1" aria-disabled="@(ViewBag.CurrentPage == 1)">
                            <i class="bi bi-chevron-left"></i> Previous
                        </a>
                    </li>

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", "AdminTrack", new { page = i })">@i</a>
                        </li>
                    }

                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", "AdminTrack", new { page = ViewBag.CurrentPage + 1 })">
                            Next <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }

    <div class="mt-4">
        <a class="btn btn-outline-primary" asp-action="Index" asp-controller="AdminBranch">
            <i class="bi bi-building"></i> Manage Branches
        </a>
    </div>
</div>
