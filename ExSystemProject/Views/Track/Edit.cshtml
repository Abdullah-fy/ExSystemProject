@model Track

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Title with Underline -->
            <div class="d-flex align-items-center pb-2 mb-4 border-bottom border-3 border-primary">
                <h3 class="mb-0">Update Track <span class="h2 lead">@Model.TrackName</span> </h3>
            </div>

            <!-- Form in a Card with Shadow -->
            <div class="card shadow">
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="TrackId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="TrackName" class="form-label">Track Name</label>
                            <input asp-for="TrackName" class="form-control" />
                            <span asp-validation-for="TrackName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TrackDuration" class="form-label">Duration: 9M or 4M</label>
                            <input asp-for="TrackDuration" class="form-control" />
                            <span asp-validation-for="TrackDuration" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TrackIntake" class="form-label">Intake</label>
                            <input asp-for="TrackIntake" class="form-control" />
                            <span asp-validation-for="TrackIntake" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Branch</label> <br />
                            <select class="form-select" aria-label="Default select example" asp-for="BranchId">
                                <option selected value="0">Select Branch</option>
                                @foreach (var item in ViewBag.Branches)
                                {
                                    <option value="@item.BranchId">@item.BranchName</option>
                                }
                            </select>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" asp-controller="Branch" class="btn btn-outline-secondary">Back to Branch</a>
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </form>

                    @if (ViewBag.SuccessMessage != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @ViewBag.SuccessMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>