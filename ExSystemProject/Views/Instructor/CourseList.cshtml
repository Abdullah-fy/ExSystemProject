@model IEnumerable<ExSystemProject.Models.Course>

@{
    ViewData["Title"] = "Course List";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h4 class="card-title mb-3">Available Courses</h4>

            @* Optional: Create button if needed *@
            @* <a asp-action="Create" class="btn btn-primary mb-3">Create New Course</a> *@

            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().CrsId)</th>
                            <th>@Html.DisplayNameFor(model => model.First().CrsName)</th>
                            <th>@Html.DisplayNameFor(model => model.First().CrsPeriod)</th>
                           @*<th>@Html.DisplayNameFor(model => model.First().InsId)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Isactive)</th>*@ 
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CrsId</td>
                                <td>@item.CrsName</td>
                                <td>@item.CrsPeriod</td>
                                @* <td>@item.InsId</td> *@
                                @*<td>*@
                                    @* @if (item?.Isactive) *@
                                    @* { *@
                                    @*     <span class="badge bg-success">Active</span> *@
                                    @* } *@
                                    @* else *@
                                    @* { *@
                                    @*     <span class="badge bg-danger">Inactive</span> *@
                                    @* } *@
                                @*</td>*@ 
                                <td>
                                    <a asp-action="CourseStudentDetails" asp-route-crsId="@item.CrsId" class="btn btn-sm btn-outline-primary">
                                        More
                                    </a>
                                    @* Additional actions can be added here *@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

