@model IEnumerable<ExSystemProject.Models.StudentCourse>

@{
    ViewData["Title"] = "Course Student Details";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h4 class="card-title mb-3">Course Student Details</h4>

            @* <a asp-action="Create" class="btn btn-primary mb-3">Assign New Student</a> *@

            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            @if (Model != null && Model.Any())
                            {
                                <th>@Html.DisplayNameFor(model => model.First().CrsId)</th>
                                <th>@Html.DisplayNameFor(model => model.First().StudentId)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Grade)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Ispassed)</th>
                            }
                            else
                            {
                            <tr><td colspan="5" class="text-muted">No students assigned yet.</td></tr>
                            }

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Crs.CrsName</td>
                                <td>@item.Student.User.Username</td>
                                <td>@(item.Grade.HasValue ? item.Grade.Value.ToString() : "N/A")</td>
                                @* <td> *@
                                    @* @if (item.Isactive)  *@
                                    @* {  *@
                                    @*     <span class="badge bg-success">Active</span>  *@
                                    @* }  *@
                                    @* else  *@
                                    @* { *@
                                    @* <span class="badge bg-danger">Inactive</span>  *@
                                    @* } *@
                                @* </td> *@
                                <td>
                                    @if (item?.Ispassed == true)
                                    {
                                        <span class="badge bg-primary">Passed</span>
                                    }
                                    else if (item?.Ispassed == false)
                                    {
                                        <span class="badge bg-warning text-dark">Not Passed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Unknown</span>
                                    }
                                </td>
                                <td>
                                    @* <a asp-action="Edit" asp-route-id="@item.CrsId" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    @* <a asp-action="Details" asp-route-id="@item.CrsId" class="btn btn-sm btn-outline-info">Details</a> *@
                                    @* <a asp-action="Delete" asp-route-id="@item.CrsId" class="btn btn-sm btn-outline-danger">Delete</a> *@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
