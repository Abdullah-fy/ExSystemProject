@model IEnumerable<ExSystemProject.Models.Exam>

@{
    ViewData["Title"] = "Exam Page";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h4 class="card-title mb-3">Exam Management</h4>

            <div class="mb-3">
                <a asp-action="GenerateExamForTrack" class="btn btn-outline-primary me-2">Generate Exam for Track</a>
                <a asp-action="GenerateExamForStudent" class="btn btn-outline-secondary">Generate Exam for Students</a>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            @* <th>@Html.DisplayNameFor(model => model.First().ExamId)</th> *@
                            <th>@Html.DisplayNameFor(model => model.First().ExamName)</th>
                            <th>@Html.DisplayNameFor(model => model.First().StartTime)</th>
                            <th>@Html.DisplayNameFor(model => model.First().EndTime)</th>
                            <th>@Html.DisplayNameFor(model => model.First().CrsId)</th>
                            @* <th>@Html.DisplayNameFor(model => model.First().InsId)</th> *@
                            @* <th>@Html.DisplayNameFor(model => model.First().Isactive)</th> *@
                            <th>@Html.DisplayNameFor(model => model.First().TotalMarks)</th>
                            <th>@Html.DisplayNameFor(model => model.First().PassedGrade)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @* <td>@item.ExamId</td> *@
                                <td>@item.ExamName</td>
                                <td>@item.StartTime.ToString()</td>
                                <td>@item.EndTime.ToString()</td>
                                <td>@item.Crs.CrsName</td>
                                @* <td>@item.InsId</td> *@
                                @* <td> *@
                                    @* @if (item.Isactive) *@
                                    @* { *@
                                    @*     <span class="badge bg-success">Active</span> *@
                                    @* } *@
                                    @* else *@
                                    @* { *@
                                    @*     <span class="badge bg-danger">Inactive</span> *@
                                    @* } *@
                                @* </td> *@
                                <td>@item.TotalMarks</td>
                                <td>@item.PassedGrade</td>
                                <td>
                                    <a asp-action="ShowAllStudentTookTheExam" asp-route-examId="@item.ExamId" class="btn btn-sm btn-outline-info">More</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


                                    