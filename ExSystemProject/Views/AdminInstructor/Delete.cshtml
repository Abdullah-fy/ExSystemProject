@model ExSystemProject.DTOS.InstructorDTO
@{
    ViewData["Title"] = "Delete Instructor";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h2>Delete Instructor</h2>

    <div class="alert alert-danger">
        <h4><i class="fas fa-exclamation-triangle"></i> Warning</h4>
        <p>Are you sure you want to deactivate this instructor? This will affect all courses assigned to this instructor.</p>
    </div>

    <div class="card">
        <div class="card-header">
            <i class="fas fa-user-slash me-1"></i>
            Instructor Information
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Username</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Track</dt>
                <dd class="col-sm-9">@Model.TrackName</dd>

                <dt class="col-sm-3">Branch</dt>
                <dd class="col-sm-9">@Model.BranchName</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.Isactive == true)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="InsId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
