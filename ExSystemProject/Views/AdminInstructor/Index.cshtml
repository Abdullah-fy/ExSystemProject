@model IEnumerable<InstructorDTO>

@{
    ViewData["Title"] = "Instructors Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">Instructors Management</h1>
        <div>
            <a asp-action="Create" class="btn btn-primary me-2">
                <i class="fas fa-plus-circle"></i> Add New Instructor
            </a>
            <a asp-action="Index" asp-route-showInactive="@(!ViewBag.ShowInactive)"
               class="btn @(ViewBag.ShowInactive ? "btn-warning" : "btn-outline-secondary")">
                @(ViewBag.ShowInactive ? "Hide Inactive" : "Show Inactive")
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Gender</th>
                            <th>Track</th>
                            <th class="text-end">Salary</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var instructor in Model)
                        {
                            <tr>
                                <td>@instructor.Username</td>
                                <td>@instructor.Email</td>
                                <td>@(instructor.Gender == "M" ? "Male" : "Female")</td>
                                <td>@instructor.TrackName</td>
                                <td class="text-end">@instructor.Salary?.ToString("C")</td>
                                <td>
                                    <span class="badge @(instructor.IsActive ? "bg-success" : "bg-secondary")">
                                        @(instructor.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@instructor.InsId"
                                           class="btn btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@instructor.InsId"
                                           class="btn btn-outline-info" title="Details">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        @* <a asp-action="Delete" asp-route-id="@instructor.InsId" *@
                                        @*    class="btn btn-outline-danger" title="Deactivate"> *@
                                        @*     <i class="fas fa-user-slash"></i> *@
                                        @* </a> *@
                                        <a asp-action="Delete" asp-route-id="@instructor.InsId"
                                           class="btn @(instructor.IsActive ? "btn-outline-warning" : "btn-outline-success")"
                                           title="@(instructor.IsActive ? "Deactivate" : "Activate")">
                                            <i class="fas @(instructor.IsActive ? "fa-toggle-off" : "fa-toggle-on")"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
