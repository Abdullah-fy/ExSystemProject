@model ExSystemProject.DTOS.InstructorDTO
@{
    ViewData["Title"] = "Instructor Details";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h2>Instructor Details</h2>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @* @if (string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="~/images/default-user.png" class="img-fluid rounded-circle mb-3" style="max-width: 150px;" alt="Profile Picture">
                    }
                    else
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded-circle mb-3" style="max-width: 150px;" alt="Profile Picture">
                    } *@

                    <h4>@Model.Username</h4>
                    <p class="text-muted">@(Model.Isactive == true ? "Active Instructor" : "Inactive Instructor")</p>

                    <div class="d-grid gap-2 mt-3">
                        <a asp-action="Edit" asp-route-id="@Model.InsId" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Courses" asp-route-id="@Model.InsId" class="btn btn-primary">
                            <i class="fas fa-book"></i> View Courses
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-info-circle me-1"></i>
                    Personal Information
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@Model.Username</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Gender</dt>
                        <dd class="col-sm-8">@(Model.Gender == "M" ? "Male" : "Female")</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.Isactive == true)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-user-tie me-1"></i>
                    Professional Information
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Instructor ID</dt>
                        <dd class="col-sm-8">@Model.InsId</dd>

                        <dt class="col-sm-4">Salary</dt>
                        <dd class="col-sm-8">@Model.Salary.Value.ToString("C")</dd>

                        <dt class="col-sm-4">Track</dt>
                        <dd class="col-sm-8">@Model.TrackName</dd>

                        <dt class="col-sm-4">Branch</dt>
                        <dd class="col-sm-8">@Model.BranchName</dd>

                        <dt class="col-sm-4">Assigned Courses</dt>
                        <dd class="col-sm-8">
                            @if (Model.AssignedCourses != null && Model.AssignedCourses.Any())
                            {
                                <ul class="list-unstyled">
                                    @foreach (var course in Model.AssignedCourses)
                                    {
                                        <li>
                                            <i class="fas fa-book me-1"></i>
                                            @course.CrsName
                                            @if (course.Isactive == true)
                                            {
                                                <span class="badge bg-success ms-1">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger ms-1">Inactive</span>
                                            }
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span class="text-muted">No courses assigned</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
