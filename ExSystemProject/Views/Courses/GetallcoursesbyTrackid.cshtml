@model List<ExSystemProject.DTOS.CourseDTO>

@{
    ViewData["Title"] = "Courses";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/course.css" rel="stylesheet" />
<script src="~/js/course.js"></script>
<div class="container my-5">
    <div class="row row-cols-1 row-cols-md-4 g-4 course-card">
        @foreach (var course in Model)
        {
            <div class="col course" data-model-id="@course.CrsId" >
                <div class="card h-100 d-flex flex-column justify-content-between">
                    <div class="position-relative">
                        <p class="preview-label" id="lol">Preview Course</p>
                        <img id="poster" src="~/Courses/@course.Poster" class="card-img-top" alt="Poster">
                    </div>
                    <div class="card-body">
                        <p class="updated">Updated @DateTime.Now.ToString("d/MM/yy")</p>
                        <p class="course-name">@course.CrsName</p>
                    </div>
                    <div class="footer-icons">
                        <span><i class="bi bi-person"></i> @((new Random().Next(1000, 20000)))</span>
                        <a href="#" class="join-btn">Join</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.js"></script>
