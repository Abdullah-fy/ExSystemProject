@model ExSystemProject.DTOS.CourseDTO

@{
    ViewData["Title"] = "Course Details";
}
<script src="c:\users\omar\source\repos\exsystemproject\exsystemproject\wwwroot\js\coursedetail.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .hero-section {
        background-color: #7b0f1d;
        color: white;
        padding: 40px 20px;
        text-align: center;
        border-bottom: 5px solid #e5e5e5;
    }

        .hero-section h1 {
            font-size: 2.5rem;
            margin: 0;
        }

    .course-wrapper {
        margin-top: -30px;
    }

    .course-main {
        padding: 30px;
        background: white;
        border-radius: 1rem;
        box-shadow: 0 6px 12px rgba(0,0,0,0.1);
        margin-bottom: 2rem;
    }

    .sidebar {
        background: white;
        border-radius: 1rem;
        box-shadow: 0 6px 12px rgba(0,0,0,0.1);
        padding: 20px;
    }

        .sidebar h4 {
            font-weight: 600;
        }

    .course-poster {
        width: 100%;
        max-height: 260px;
        object-fit: cover;
        border-radius: 1rem;
    }

    .section-title {
        font-weight: 600;
        color: #7b0f1d;
        margin-top: 20px;
        margin-bottom: 10px;
        border-bottom: 2px solid #ddd;
        padding-bottom: 5px;
    }

    .enroll-btn {
        background-color: #7b0f1d;
        color: white;
        border: none;
        padding: 10px 25px;
        font-weight: 600;
        border-radius: 0.5rem;
    }

        .enroll-btn:hover {
            background-color: #a31326;
        }

    .rating-box {
        font-size: 1.5rem;
        font-weight: bold;
        color: #ffc107;
    }

    .instructor-card {
        background-color: #f1f1f1;
        padding: 20px;
        border-radius: 1rem;
    }
</style>

<div class="hero-section">
    <h1>@Model.CrsName</h1>
</div>

<div class="container course-wrapper">
    <div class="row g-4">
        <!-- Main Content -->
        <div class="col-md-8">
            <div class="course-main">
                <img src="~/Courses/@Model.Poster" alt="Course Poster" class="course-poster mb-4" />

                <h5 class="section-title">Course Description</h5>
                <p>@Model.Description</p>

                <h5 class="section-title">Course Duration</h5>
                <p>@Model.CrsPeriod</p>

                <h5 class="section-title">What You'll Learn</h5>
                <ul>
                    <li>Deep understanding of @Model.CrsName</li>
                    <li>Hands-on project work</li>
                    <li>Application of core principles</li>
                </ul>

                <h5 class="section-title">Requirements</h5>
                <ul>
                    <li>Basic computer knowledge</li>
                    <li>Motivation to learn</li>
                </ul>

                <h5 class="section-title">About the Instructor</h5>
                <div class="instructor-card">
                    <strong>@Model.InstructorName</strong><br />
                    Expert in the field with years of experience in teaching and industry.
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-md-4">
            <div class="sidebar">
                <h4 class="text-success">Free</h4>
                <hr />
                <p><i class="bi bi-play-circle"></i> Recorded Videos</p>
                <p><i class="bi bi-people"></i> Practical Projects</p>
                <p><i class="bi bi-award"></i> Completion Certificate</p>

                <form method="post" asp-action="Enroll" asp-route-id="@Model.CrsId">
                    <button type="submit" class="w-100 enroll-btn mt-3">Enroll Course</button>
                </form>
                </div>
                <hr class="my-4" />

                <h5 class="section-title">Students Feedback</h5>
                <div class="rating-box">⭐ 4.5</div>
                <small>59 student ratings</small>

                <ul class="mt-3">
                    <li>⭐⭐⭐⭐⭐ – 40</li>
                    <li>⭐⭐⭐⭐ – 10</li>
                    <li>⭐⭐⭐ – 6</li>
                    <li>⭐⭐ – 2</li>
                    <li>⭐ – 1</li>
                </ul>
            </div>
        </div>
    </div>
</div>
