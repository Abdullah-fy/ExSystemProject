@model ExSystemProject.Models.UserAssignment
@{
    ViewData["Title"] = "Supervisor Details";
    Layout = "~/Views/Shared/_BranchManagerLayout.cshtml";
}

<div class="card shadow">
    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
        <h5 class="mb-0 text-primary">
            <i class="bi bi-person-badge me-2"></i> Supervisor Details
        </h5>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.AssignmentId" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-pencil me-1"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm ms-1">
                <i class="bi bi-arrow-left me-1"></i> Back to List
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Personal Information</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tbody>
                                <tr>
                                    <th style="width:40%">Username</th>
                                    <td>@Model.User?.Username</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>@Model.User?.Email</td>
                                </tr>
                                <tr>
                                    <th>Gender</th>
                                    <td>@(Model.User?.Gender == "M" ? "Male" : "Female")</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>
                                        @if (Model.Isactive == true)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Assignment Information</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tbody>
                                <tr>
                                    <th style="width:40%">Assignment ID</th>
                                    <td>@Model.AssignmentId</td>
                                </tr>
                                <tr>
                                    <th>Branch</th>
                                    <td>@Model.Branch?.BranchName</td>
                                </tr>
                                <tr>
                                    <th>Track</th>
                                    <td>
                                        @if (Model.TrackId.HasValue)
                                        {
                                            @Model.Track?.TrackName
                                        }
                                        else
                                        {
                                            <span class="text-muted">No track assigned</span>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer bg-white">
        <div class="d-flex justify-content-between">
            <div>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Back to List
                </a>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.AssignmentId" class="btn btn-primary me-1">
                    <i class="bi bi-pencil me-1"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.AssignmentId" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i> Delete
                </a>
            </div>
        </div>
    </div>
</div>
