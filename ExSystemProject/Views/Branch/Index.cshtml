@{
}
@model List<Branch>


<h3>
    Branch
    <small class="text-body-secondary text-center">Managment</small>
</h3>
<hr/>

<a class="btn btn-secondary my-3" asp-action="create">Add New Branch</a>


<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Branch Name</th>
                        <th scope="col">Location</th>
                        <th scope="col">Is Active?</th>
                        <th scope="col">Tracks</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.BranchId</td>
                            <td>@item.BranchName</td>
                            <td>@item.Location</td>
                            <td>
                            @if (item.Isactive == true)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else if (item.Isactive == false)
                            {
                                    <span class="badge  bg-danger text-white">Inactive</span>
                            }
                            </td>
                            <td>@item.Tracks.Count</td>
                            <td> 
                                 <a class="btn btn-secondary" asp-action="details" asp-route-id=@item.BranchId>Details</a>
                                <a class="btn btn-info m-1" asp-action="edit" asp-route-id=@item.BranchId>Edit</a>
                                <a class="btn btn-danger m-1" asp-action="delete" asp-route-id=@item.BranchId>Delete</a>
                            </td>
                            

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1 })" tabindex="-1" aria-disabled="@(ViewBag.CurrentPage == 1)">Previous</a>
                    </li>

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                        </li>
                    }

                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1 })">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>



</div>
<a class="btn btn-outline-secondary my-3" asp-action="index" asp-controller="Track">All Tracks</a>
