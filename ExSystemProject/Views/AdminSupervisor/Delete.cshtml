@model ExSystemProject.DTOS.SupervisorDTO
@{
    ViewData["Title"] = $"Delete Supervisor: {Model.Username}";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white py-3">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Delete</h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-danger">
                        <h5 class="alert-heading"><i class="bi bi-exclamation-circle-fill me-2"></i>Warning!</h5>
                        <p>Are you sure you want to delete this supervisor?</p>
                        <hr>
                        <p class="mb-0">This action will <strong>deactivate</strong> this supervisor's account and assignment. 
                        They will no longer have access to the system or be able to supervise their assigned branch/track.</p>
                    </div>

                    <div class="mt-4">
                        <h5 class="text-danger">Supervisor Details</h5>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <tr>
                                    <th style="width: 30%">Assignment ID</th>
                                    <td>@Model.AssignmentId</td>
                                </tr>
                                <tr>
                                    <th>Username</th>
                                    <td>@Model.Username</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>@Model.Email</td>
                                </tr>
                                <tr>
                                    <th>Gender</th>
                                    <td>@(Model.Gender == "M" ? "Male" : "Female")</td>
                                </tr>
                                <tr>
                                    <th>Branch</th>
                                    <td>@Model.BranchName</td>
                                </tr>
                                <tr>
                                    <th>Track</th>
                                    <td>@(string.IsNullOrEmpty(Model.TrackName) ? "All Tracks" : Model.TrackName)</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="AssignmentId" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel and Return
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
