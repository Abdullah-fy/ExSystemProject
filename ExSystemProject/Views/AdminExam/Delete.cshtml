@model ExSystemProject.DTOS.ExamDTO
@{
    ViewData["Title"] = "Delete Exam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Delete Exam</h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <h5 class="alert-heading">Warning!</h5>
            <p>Are you sure you want to delete this exam? This action cannot be undone and may affect related data.</p>
        </div>

        <div class="card mb-4">
            <div class="card-body">
                <h6>Exam Details</h6>
                <table class="table table-borderless">
                    <tr>
                        <th style="width: 30%">Exam ID:</th>
                        <td>@Model.ExamId</td>
                    </tr>
                    <tr>
                        <th>Exam Name:</th>
                        <td>@Model.ExamName</td>
                    </tr>
                    <tr>
                        <th>Course:</th>
                        <td>@Model.CourseName</td>
                    </tr>
                    <tr>
                        <th>Instructor:</th>
                        <td>@Model.InstructorName</td>
                    </tr>
                    <tr>
                        <th>Start Time:</th>
                        <td>@(Model.StartTime?.ToString("g") ?? "Not set")</td>
                    </tr>
                    <tr>
                        <th>End Time:</th>
                        <td>@(Model.EndTime?.ToString("g") ?? "Not set")</td>
                    </tr>
                    <tr>
                        <th>Total Marks:</th>
                        <td>@Model.TotalMarks</td>
                    </tr>
                </table>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" name="id" value="@Model.ExamId" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete Permanently
                </button>
            </div>
        </form>
    </div>
</div>
