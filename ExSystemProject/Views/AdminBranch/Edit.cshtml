@model ExSystemProject.Models.Branch
@{
    ViewData["Title"] = "Edit Branch";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Title with Underline -->
            <div class="d-flex align-items-center pb-2 mb-4 border-bottom border-3 border-primary">
                <h3 class="mb-0">
                    <i class="bi bi-pencil-square me-2"></i>
                    Edit Branch <span class="text-primary fw-bold">@Model.BranchName</span>
                </h3>
            </div>

            <!-- Form in a Card with Shadow -->
            <div class="card shadow">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 text-primary">Update Branch Information</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" asp-controller="AdminBranch">
                        <input type="hidden" asp-for="BranchId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-4">
                            <label asp-for="BranchName" class="form-label">Branch Name <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-building"></i></span>
                                <input asp-for="BranchName" class="form-control" placeholder="Enter branch name" required />
                            </div>
                            <span asp-validation-for="BranchName" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Location" class="form-label">Location <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                                <input asp-for="Location" class="form-control" placeholder="Enter branch location" required />
                            </div>
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Isactive" class="form-label">Status</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-toggle-on"></i></span>
                                <select class="form-select" asp-for="Isactive">
                                    <option value="true">Active</option>
                                    <option value="false">Inactive</option>
                                </select>
                            </div>
                            <small class="form-text text-muted">
                                <i class="bi bi-info-circle"></i> Setting a branch as inactive will also affect its tracks and assigned staff.
                            </small>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-between mt-4">
                            <a asp-action="Index" asp-controller="AdminBranch" class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Update Branch
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
