@model ExSystemProject.Models.Branch
@{
    ViewData["Title"] = "Delete Branch";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white py-3">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Delete</h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-danger">
                        <h5 class="alert-heading"><i class="bi bi-exclamation-circle-fill me-2"></i>Warning!</h5>
                        <p>Are you sure you want to delete this branch?</p>
                        <hr>
                        <p class="mb-0">This action will <strong>permanently delete</strong> this branch and all its associated tracks. This operation cannot be undone.</p>
                    </div>

                    <div class="mt-4">
                        <h5 class="text-danger">Branch Details</h5>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <tr>
                                    <th style="width: 30%">Branch ID</th>
                                    <td>@ViewBag.id</td>
                                </tr>
                                <tr>
                                    <th>Branch Name</th>
                                    <td>@(Model?.BranchName ?? "Not available")</td>
                                </tr>
                                <tr>
                                    <th>Location</th>
                                    <td>@(Model?.Location ?? "Not available")</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>
                                        @if (Model?.Isactive == true)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Number of Tracks</th>
                                    <td>@(Model?.Tracks?.Count ?? 0)</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" asp-controller="AdminBranch" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel and Return
                        </a>
                        <a asp-action="ConfirmDelete" asp-controller="AdminBranch" asp-route-id="@ViewBag.id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Confirm Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
