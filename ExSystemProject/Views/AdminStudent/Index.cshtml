@model IEnumerable<ShowStudentDTO>

@{
    ViewData["Title"] = "Students List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Students Management</h1>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Student
            </a>
            <a asp-action="Index" asp-route-showInactive="@(!ViewBag.ShowInactive)"
               class="btn @(ViewBag.ShowInactive ? "btn-warning" : "btn-secondary")">
                @(ViewBag.ShowInactive ? "Hide Inactive" : "Show Inactive")
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Gender</th>
                        <th>Track</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.Username</td>
                            <td>@student.Email</td>
                            <td>@(student.Gender == "M" ? "Male" : "Female")</td>
                            <td>@student.TrackName</td>
                            <td>
                                <span class="badge @((bool)student.IsActive ? "bg-success" : "bg-secondary")">
                                    @((bool)student.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@student.StudentId" class="btn btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@student.StudentId" class="btn btn-outline-info">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    @* <a asp-action="Delete" asp-route-id="@student.StudentId" class="btn btn-outline-danger"> *@
                                    @*     <i class="fas fa-trash-alt"></i> *@
                                    @* </a> *@
                                    <a asp-action="Delete" asp-route-id="@student.StudentId"
                                       class="btn @((bool)student.IsActive ? "btn-outline-warning" : "btn-outline-success")"
                                       title="@((bool)student.IsActive ? "Deactivate" : "Activate")">
                                        <i class="fas @((bool)student.IsActive ? "fa-toggle-off" : "fa-toggle-on")"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

