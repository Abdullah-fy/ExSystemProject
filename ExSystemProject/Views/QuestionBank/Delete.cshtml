@model ExSystemProject.DTOS.QuestionBankDTO
@{
    ViewData["Title"] = "Delete Question";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Delete Question</h5>
    </div>
    <div class="card-body">
        <div class="alert alert-danger">
            <h5 class="alert-heading">Warning!</h5>
            <p>Are you sure you want to delete this question? This action cannot be undone.</p>
        </div>

        <div class="mb-4">
            <h6>Question:</h6>
            <p class="p-3 bg-light">@Model.QuesText</p>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <div class="mb-2"><strong>ID:</strong> @Model.QuesId</div>
                <div class="mb-2"><strong>Type:</strong> @Model.QuesType</div>
            </div>
            <div class="col-md-6">
                <div class="mb-2"><strong>Score:</strong> @Model.QuesScore</div>
                <div class="mb-2"><strong>Exam:</strong> @(string.IsNullOrEmpty(Model.ExamName) ? "Not Assigned" : Model.ExamName)</div>
            </div>
        </div>

        <h6>Choices:</h6>
        <div class="list-group mb-4">
            @if (Model.Choices != null && Model.Choices.Any())
            {
                @foreach (var choice in Model.Choices)
                {
                    <div class="list-group-item @(choice.IsCorrect ? "list-group-item-success" : "")">
                        @choice.ChoiceText @(choice.IsCorrect ? "(Correct Answer)" : "")
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning">
                    No choices found for this question.
                </div>
            }
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="QuesId" />
            <div class="d-flex justify-content-between">
                @if (Model.ExamId.HasValue)
                {
                    <a asp-action="Index" asp-route-examId="@Model.ExamId" class="btn btn-secondary">
                        <i class="bi bi-x-lg"></i> Cancel
                    </a>
                }
                else
                {
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-lg"></i> Cancel
                    </a>
                }
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </form>
    </div>
</div>
