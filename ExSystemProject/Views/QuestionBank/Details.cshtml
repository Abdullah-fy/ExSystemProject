@model ExSystemProject.DTOS.QuestionBankDTO
@{
    ViewData["Title"] = "Question Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Question Details</h5>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.QuesId" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="mb-4">
            <div class="d-flex justify-content-between">
                <div>
                    <span class="badge @(Model.QuesType == "MCQ" ? "bg-primary" : "bg-info")">@Model.QuesType</span>
                </div>
                <div>
                    <strong>Score: @Model.QuesScore</strong>
                </div>
            </div>

            <h5 class="mt-3">@Model.QuesText</h5>

            @if (!string.IsNullOrEmpty(Model.ExamName))
            {
                <div class="mt-2">
                    <span class="text-muted">Exam: @Model.ExamName</span>
                </div>
            }
            else
            {
                <div class="mt-2">
                    <span class="text-muted">Not assigned to any exam</span>
                </div>
            }
        </div>

        <h6 class="mt-4">Choices:</h6>
        <div class="list-group">
            @if (Model.Choices != null && Model.Choices.Any())
            {
                @foreach (var choice in Model.Choices)
                {
                    <div class="list-group-item @(choice.IsCorrect ? "list-group-item-success" : "")">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                @choice.ChoiceText
                            </div>
                            @if (choice.IsCorrect)
                            {
                                <div>
                                    <span class="badge bg-success">Correct Answer</span>
                                </div>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning">
                    No choices found for this question.
                </div>
            }
        </div>
    </div>
    <div class="card-footer">
        @if (Model.ExamId.HasValue)
        {
            <a asp-action="Index" asp-route-examId="@Model.ExamId" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Questions
            </a>
        }
        else
        {
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Questions
            </a>
        }
    </div>
</div>
