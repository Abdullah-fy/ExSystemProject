@model IEnumerable<ExSystemProject.DTOS.QuestionBankDTO>
@{
    ViewData["Title"] = "Question Bank";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            @if (ViewBag.ExamId != null)
            {
                <span>Questions for Exam: @ViewBag.ExamName</span>
            }
            else
            {
                <span>Question Bank</span>
            }
        </h5>
        <div>
            @if (ViewBag.ExamId != null)
            {
                <a asp-action="Create" asp-route-examId="@ViewBag.ExamId" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> Add Question to Exam
                </a>
                <a asp-controller="Exam" asp-action="Details" asp-route-id="@ViewBag.ExamId" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Exam
                </a>
            }
            else
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> Add New Question
                </a>
            }
        </div>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Question</th>
                            <th>Type</th>
                            <th>Exam</th>
                            <th>Score</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var question in Model)
                        {
                            <tr>
                                <td>@question.QuesId</td>
                                <td>@(question.QuesText.Length > 50 ? question.QuesText.Substring(0, 50) + "..." : question.QuesText)</td>
                                <td>@question.QuesType</td>
                                <td>@(string.IsNullOrEmpty(question.ExamName) ? "Not Assigned" : question.ExamName)</td>
                                <td>@question.QuesScore</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@question.QuesId" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@question.QuesId" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-info-circle"></i> Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@question.QuesId" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                        @if (ViewBag.ExamId != null)
                                        {
                                            <form asp-action="RemoveFromExam" method="post">
                                                <input type="hidden" name="id" value="@question.QuesId" />
                                                <input type="hidden" name="examId" value="@ViewBag.ExamId" />
                                                <button type="submit" class="btn btn-sm btn-outline-warning">
                                                    <i class="bi bi-x-circle"></i> Remove
                                                </button>
                                            </form>
                                        }
                                        else if (question.ExamId == null)
                                        {
                                            <a asp-action="AddToExam" asp-route-id="@question.QuesId" class="btn btn-sm btn-outline-success">
                                                <i class="bi bi-plus-circle"></i> Add to Exam
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <h5 class="alert-heading">No questions found!</h5>
                <p>There are no questions in the bank yet. Click the "Add New Question" button to create one.</p>
            </div>
        }
    </div>
</div>
