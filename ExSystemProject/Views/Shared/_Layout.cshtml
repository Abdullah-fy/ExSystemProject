<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITI Examination System</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        :root {
        --iti-red: #a41e22;
        --iti-blue: #1e3a47;
        --iti-light-gray: #f5f5f5;
        }

        body {
        background-color: var(--iti-light-gray);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        }

        /* Header Styling */
        .navbar {
        background-color: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        border-bottom: 3px solid var(--iti-red);
        }

        .navbar-brand {
        display: flex;
        align-items: center;
        }

        .navbar-logo {
        height: 60px;
        margin-right: 15px;
        }

        .site-name {
        font-weight: 700;
        color: var(--iti-blue);
        font-size: 1.5rem;
        }

        .navbar-nav .nav-link {
        color: var(--iti-blue);
        font-weight: 500;
        transition: color 0.3s;
        margin: 0 10px;
        }

        .navbar-nav .nav-link:hover {
        color: var(--iti-red);
        }

        .auth-btns .btn-outline-primary {
        color: var(--iti-red);
        border-color: var(--iti-red);
        }

        .auth-btns .btn-outline-primary:hover {
        background-color: var(--iti-red);
        color: white;
        }

        .auth-btns .btn-primary {
        background-color: var(--iti-red);
        border-color: var(--iti-red);
        }

        /* Main Content */
        main {
        flex: 1;
        }

        /* Card Styling */
        .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: none;
        margin-bottom: 1.5rem;
        }

        .card-header {
        background-color: white;
        border-bottom: 3px solid var(--iti-red);
        font-weight: 600;
        }

        /* Table Styling */
        .table-container {
        background-color: white;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 0.25rem;
        padding: 1rem;
        margin-bottom: 1.5rem;
        }

        /* Button Styling */
        .btn-iti-red {
        background-color: var(--iti-red);
        border-color: var(--iti-red);
        color: white;
        }

        .btn-iti-red:hover {
        background-color: #901a1e;
        border-color: #901a1e;
        color: white;
        }

        .btn-iti-blue {
        background-color: var(--iti-blue);
        border-color: var(--iti-blue);
        color: white;
        }

        .btn-iti-blue:hover {
        background-color: #152c36;
        border-color: #152c36;
        color: white;
        }

        /* Badge Styling */
        .badge-admin {
        background-color: var(--iti-red);
        color: white;
        padding: 0.4em 0.6em;
        font-size: 0.8em;
        border-radius: 4px;
        }

        /* Footer Styling */
        footer {
        background-color: var(--iti-blue);
        color: white;
        padding: 2rem 0 0 0;
        margin-top: auto;
        }

        footer h5 {
        font-weight: 600;
        margin-bottom: 1rem;
        }

        footer .footer-logo {
        height: 60px;
        margin-bottom: 1rem;

        }

        footer a {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        transition: color 0.3s;
        }

        footer a:hover {
        color: white;
        text-decoration: none;
        }

        .footer-bottom {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding: 1rem 0;
        margin-top: 1.5rem;
        }

        .social-icons a {
        display: inline-block;
        margin-right: 10px;
        font-size: 1.5rem;
        color: white;
        }

        /* Responsive adjustments */
        @@media (max-width: 767px) {
        .navbar-logo {
        height: 40px;
        }

        .site-name {
        font-size: 1.2rem;
        }

        footer .col-md-4 {
        margin-bottom: 1.5rem;
        }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <img src="~/images/iti2.png" alt="ITI Logo" class="navbar-logo" onerror="this.src='https://placehold.co/120x80?text=ITI+Logo'">
                    <span class="site-name">ITI Examination System</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @if (User.IsInRole("instructor"))
                        {
                        <li class="nav-item">
                                <a class="nav-link" asp-controller="instructor" asp-action="Index">Students</a>
                        </li>
                        <li class="nav-item">
                                <a class="nav-link" asp-controller="instructor" asp-action="courselist">Courses</a>
                        </li>
                        <li class="nav-item">
                                <a class="nav-link" asp-controller="instructor" asp-action="ExamPage">Exams</a>
                        </li>
                        @* <li class="nav-item"> *@
                        @*         <a class="nav-link" asp-controller="instructor" asp-action="profile">Profile</a> *@
                        @* </li> *@
                        @* <li class="nav-item"> *@
                        @*         <a class="nav-link" asp-controller="instructor" asp-action="Index">Branches</a> *@
                        @* </li> *@
                        }
                    </ul>
                    <div class="auth-btns d-flex align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <button class="btn btn-outline-primary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    Welcome, @User.Identity.Name
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-controller="instructor" asp-action="profile">Profile</a></li>
                                    @* <li><a class="dropdown-item" asp-controller="Account" asp-action="Results">My Results</a></li> *@
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary me-2">Login</a>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Register</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4 pb-4">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <img src="~/images/iti2.png" alt="ITI Logo" class="footer-logo" onerror="this.src='https://placehold.co/120x60?text=ITI+Logo&bg=1e3a47&fc=ffffff'">
                    <p>Information Technology Institute provides professional training programs and certification to develop skills needed in the job market.</p>
                </div>
                <div class="col-md-4">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Exam" asp-action="Index">Exams</a></li>
                        <li><a asp-controller="Course" asp-action="Index">Courses</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                        <li><a asp-controller="Home" asp-action="About">About Us</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Contact Information</h5>
                    <p>
                        Smart Village, Cairo-Alex Desert Road<br>
                        Giza, Egypt<br>
                        Email: info@iti.gov.eg<br>
                        Phone: +20 123 456 7890
                    </p>

                    <div class="social-icons">
                        <a href="#" target="_blank"><i class="bi bi-facebook"></i></a>
                        <a href="#" target="_blank"><i class="bi bi-twitter"></i></a>
                        <a href="#" target="_blank"><i class="bi bi-linkedin"></i></a>
                        <a href="#" target="_blank"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom text-center">
                <p class="mb-0">&copy; @DateTime.Now.Year - Information Technology Institute - All Rights Reserved</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
