@model ExSystemProject.DTOS.TopicDTO
@{
    ViewData["Title"] = "Delete Topic";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var course = ViewBag.Course as ExSystemProject.DTOS.CourseDTO;
}

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Delete Topic</h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <h5 class="alert-heading">Warning!</h5>
            <p>Are you sure you want to delete this topic? This action cannot be undone.</p>
        </div>

        <dl class="row">
            <dt class="col-sm-3">Course:</dt>
            <dd class="col-sm-9">@course.CrsName</dd>

            <dt class="col-sm-3">Topic Name:</dt>
            <dd class="col-sm-9">@Model.TopicName</dd>

            <dt class="col-sm-3">Description:</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "No description" : Model.Description)</dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">
                @if (Model.IsActive == true)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-danger">Inactive</span>
                }
            </dd>
        </dl>

        <form asp-action="DeleteTopic" method="post">
            <input type="hidden" name="id" value="@Model.TopicId" />
            <div class="d-flex justify-content-between mt-3">
                <a asp-action="Topics" asp-route-id="@Model.CrsId" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Topics
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete Topic
                </button>
            </div>
        </form>
    </div>
</div>
